{
	"compilerOptions": {
		"outDir": "./js",
		"noImplicitAny": false,
		"module": "ES6",
		"target": "ES2022",
		"jsx": "preserve",
		"allowJs": true,
		"sourceMap": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"lib": [
			"ES2022",
			"DOM"
		],
		"typeRoots": [
			"./types"
		]
	},
	"include": [
		"src/**/*",
		"types/localizationResource.d.ts",
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts",
		"js/**/*"
	]
}